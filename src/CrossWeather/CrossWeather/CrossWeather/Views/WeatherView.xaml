<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossWeather.Views.WeatherView"
             Title="현재날씨">
    <StackLayout Padding="10" Spacing="20">
        <Label Text="{Binding WeatherSummary.Location}" FontSize="35"/>
        <Label Text="{Binding WeatherSummary.Description}" FontSize="Medium"/>
        <Label Text="{Binding WeatherSummary.Temperature}" FontSize="50"/>
        <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}"/>
    </StackLayout>
</ContentPage>